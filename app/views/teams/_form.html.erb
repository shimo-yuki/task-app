<div class="row">
  <div class="col-lg-12">
    <%= form_for(team) do |f| %>
      <div class="form_group">
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, class:"col-lg-12 form-control"%>
        </div>
      </div>
      <div class="form_group">
        <div class="field">
          <%= f.label :teema %>
          <%= f.text_area :teema, class:"col-lg-12 form-control" %>
        </div>
      </div>
      <%= f.submit'登録する', class: "btn btn-success mt-2" %>
    <% end %>
  </div>
</div>
