<h1>Team Page</h1>
<div class="row">
  <div class="col-lg-7 p-0">
    <div class="mb-4">
      <%= form_tag(teams_path,:method => 'get') do %>
        <div class="input-group mb-2">
          <%= text_field_tag :search, '', :placeholder =>'チーム検索', :class => 'form-control' %>
          <span class="input-group-btn">
            <%= button_tag  :name => nil, type: 'submit', class: "btn btn-success search-button"  do %>
              <i class="fas fa-search"></i>
            <% end %>
          </span>
        </div>
      <% end %>

      <% if @team != 0 %>
        <div class="row">
          <% @team.each do |team| %>
            <div class="col-lg-12 pr-0">
              <div class=" mb-3">
                <div class="card border-primar">
                  <div class="card-body">
                    <p>name : <%= team.name %></p>
                    <p>teema : <%= team.teema %></p>
                    <%= link_to '詳細', team_path(team) %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <% if @myteams.present? %>
      <h5>  管理者のチーム一覧</h5>
      <div class="row">
        <% @myteams.each do |myteam|%>
          <div class="col-lg-12 pr-0">
            <div class="mr-3 mb-3">
              <div class="card border-success">
                <div class="card-body">
                  <p>name : <%= myteam.name %></p>
                  <p>teema : <%= myteam.teema %></p>
                  <%= link_to '詳細', team_path(myteam), class:"btn btn-light" %>
                  <%= link_to '編集', edit_team_path(myteam), class: "btn btn-info" %>
                  <%= link_to '削除', team_path(myteam), method: :delete,class: "btn btn-danger" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="col-lg-5">
    <%= link_to "チームを作成する", new_team_path, class:"btn btn-info col-lg-12 mb-4" %>
    <% if @teams.present? %>
      <h5>入っているチームの一覧</h5>
      <div class="row">
        <% @teams.each do |team| %>
          <div class="col-lg-12">
            <div class="mr-3 mb-3">
              <div class="card border-info">
                <div class="card-body">
                  <p>name : <%= team.name %></p>
                  <p>teema : <%= team.teema %></p>
                  <%= link_to '詳細', team_path(team), class:"btn btn-light" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
