<div class="row pull-righ text-right">
  <div class="col-lg-12 text-right">
    <% if @team.user == current_user %>
      追加するチームメンバ検索
      <%= form_tag(team_path(@team),:method => 'get') do %>
        <%= text_field_tag :search %>
        <%= submit_tag 'Search', :name => nil %>
      <% end %>
      <% unless @users == 0 %>
        <% if @users.present? %>
        <ul>
          <% @users.each do |user| %>
            <% unless user == current_user %>
              <%= link_to user.name, user_path(user) %>
              <% if @team.teamed?(user) %>
                <追加済み>
              <% else %>
                <%= link_to 'チームに追加する', team_user_teams_path(@team, user_id: user.id), method: :post, class: 'btn btn-denger' %>
              <% end %><br>
            <% end %>
          <% end %>
        </ul>
        <% else %>
          そのユーザーはいないです。
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="card bg-light p-5 mb-5">
  <div class="card-body">
    <div>
      チームテーマ<%= @team.teema %>
    </div>
    <div>
      チームの管理者<%= @team.user.name %>
    </div>
    <div>
      チームメンバ
      <% @team.users.each do |team_user| %>
        <%= team_user.name %>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
  <% @tasks.each do |task| %>
    <div class="col-lg-12 pr-3 pb-3">
      <% if task.expired? %>
        <div class="card border-danger">
          <div class="card-header bg-danger">
      <% else %>
        <div class="card border-success">
          <div class="card-header bg-success">
      <% end %>
        <%= task.title %>
        </div>
        <div class="card-body">
          <p><%= task.content %></p>
          <p>期限：<%= task.deadline.strftime("%Y年%m月%d日") %></p>
          <p>担当者：<%= task.user.name%></p>
          <p>ステータス：<%= task.display_status %></p>
          <div>
            <%= link_to "詳細", task_path(task), class: "btn btn-light" %>
            <% if task.user == current_user %>
              <%= link_to "編集", edit_task_path(task), class: "btn btn-info" %>
              <%= link_to "削除", task_path(task), method: :delete, class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
  <div class="col-lg-6 border-secondary">
    <p><i class="fas fa-comment"></i>comment</p>
    <% @comments.each do |comment| %>
      <div class="box clearfix col-lg-10 offset-md-1">
        <% if comment.user == current_user %>
          <div class="mycomment">
            <div class="my-say">
              <p><%= comment.comment %></p>
              <div class="link">
                <%= link_to '編集', edit_team_comment_path(comment), class:"btn-light edit-comment" %>
                <%= link_to '削除', team_comment_path(comment), data: {comment_id: comment.id}, method: :delete, class:"btn-light delete-comment" %>
              </div>
            </div>
          </div>
        <% else %>
          <div class="comment-name">
            <p><%= comment.user.name %></p>
          </div>
          <div class="chatting">
            <div class="comment-top">
              <p><%=comment.comment %></p>
              </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="comment-new">
      <%= form_for @comment do |f| %>
        <%= f.text_area :comment, class:"col-lg-10 offset-md-1", id:"comment" %>
        <%= f.hidden_field :team_id, value: @team.id, id:"team_id" %>
        <%= f.hidden_field :team_id, value: current_user.id, id:"user_id" %>
        <%= f.hidden_field :team_id, value: current_user.name, id:"user_name" %>
        <%= f.submit 'コメント', method: :post, class: "col-lg-10 offset-md-1 btn btn-outline-dark mb-2", id:"team-comment"%>
      <% end %>
    </div>
  </div>
</div>
