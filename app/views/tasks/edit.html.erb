<h1>Edit Task</h1>
<div class="row">
  <div class="col-lg-12">
    <%= form_with(model: @task, local: true) do |form| %>
      <% if @task.errors.any? %>
        <div class="alert-danger", id="error_explanation">
          <h2><%= pluralize(@task.errors.count, "つの") %>エラーにより、このタスクは更新されませんでした。</h2>
          <ul>
            <% @task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form_group">
        <div class="field">
          <%= form.label :title %>
          <%= form.text_field :title, class: "col-lg-12 form-control"  %>
        </div>
      </div>

      <div class="form_group">
        <div class="field">
          <%= form.label :content %>
          <%= form.text_field :content, class: "col-lg-12 form-control"  %>
        </div>
      </div>
      <div class="form_group">
        <div class="status">
          <%= form.radio_button :assign, "1", class: "status", id:'1', name:"radio", checked:"checked" %>
        </div>

        <div class="status">
          個人
        </div>

        <div class="status">
          <%= form.radio_button :assign, "2", class:"status", id:'2', name:"radio" %>
        </div>

        <div class="status">
          チーム
        </div>

        <div id="user-select-box">
          <div class="input-group mb-2">
            <%= select_tag 'task[user_ids][]', options_from_collection_for_select(User.all, :id, :name), :class => 'form-control user_form', :id => 'task_user_id_1' %>
            <span class="input-group-btn">
              <button type="button" id="user_additional_button">ユーザを追加します。</button>
            </span>
          </div>
        </div>

        <div class="teams">
          <%= form.collection_select :team_id, Team.all, :id, :name, {}, :class => 'col-lg-12', :id => 'team_id', name:'team_id' %>
            <select id="hoge" multiple name="task[user_ids][]">
              <option value="">選択してください</option>
            </select>
        </div>
      </div>


      <div class="form_group">
        <div class="field">
          <%= form.label :deadline %><br>
          <%= form.datetime_select :deadline, :default => Date.today %>
        </div>
      </div>

      <div class="form_group">
        <div class="field">
          <%= form.label :status %>
            <%= form.radio_button :status, "1" %>未対応
            <%= form.radio_button :status, "2" %>対応中
            <%= form.radio_button :status, "3" %>完了
        </div>
      </div>

      <div class="actions">
        <%= form.submit '更新する', class: "btn btn-success mr-2"  %>
        <%= link_to '一覧へ戻る', root_path, class:"btn btn-light" %>
      </div>
    <% end %>
  </div>
</div>
