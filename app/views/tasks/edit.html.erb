<h1>タスク編集</h1>
<div class="row">
  <div class="col-lg-12">
    <%= form_with(model: @task, local: true) do |form| %>
      <% if @task.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

          <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form_group">
        <div class="field">
          <%= form.label :title %>
          <%= form.text_field :title, class: "col-lg-12 form-control"  %>
        </div>
      </div>

      <div class="form_group">
        <div class="field">
          <%= form.label :content %>
          <%= form.text_field :content, class: "col-lg-12 form-control"  %>
        </div>
      </div>

      <div class="form_group">
        <div class="field">
          <%= form.label :deadline %><br>
          <%= form.datetime_select :deadline, :default => Date.today %>
        </div>

      <div class="form_group">
        <div class="field">
          <%= form.label :status %>
            <%= form.radio_button :status, "0" %>未対応
            <%= form.radio_button :status, "1" %>対応中
            <%= form.radio_button :status, "2" %>完了
        </div>
      </div>

      <div class="actions">
        <%= form.submit '更新する', class: "btn btn-success mr-2"  %>
        <%= link_to '一覧へ戻る', root_path, class:"btn btn-light" %>
      </div>
    <% end %>
