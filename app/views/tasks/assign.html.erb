<h1>アサイン</h1>
<div class="col-lg-12">
  <%= form_for(@task) do |f| %>
    <div class="row">
      <div class="col-lg-6">
        <p>現在アサインされているユーザ</p>
        <%= @task.user.name %>
      </div>
      <div class="col-lg-6">
        <p>新しくアサインするユーザ</p>
        <%= f.collection_select :user_id, User.where.not(id: current_user.id), :id, :name, {}, :class => 'col-lg-12' %>
      </div>
      <div class="col-lg-6">
        <%= f.submit "アサインする", class: "btn btn-success mb-2" %>
      </div>
    </div>
  <% end %>
</div>
<div class="card bg-light p-5">
  <div class="card-body">
    <h1>
      <%= @task.title %>
    </h1>
    <%= @task.content %><br>
    期限：<%= @task.deadline.strftime("%Y-%m-%d %H:%M:%S") %><br>
    担当者：<%= @task.user.name %><br>
    ステータス：<%= @task.display_status %><br>
  </div>
</div>
