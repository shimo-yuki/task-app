<h1>アサイン</h1>
<div class="col-lg-12">
  <div class="row">
    <div class="col-lg-6">
      <p>現在アサインされているユーザ</p>
      <%= @task.user.name %>
    </div>
    <div class="col-lg-6">
      <%= form_for(@task) do |f| %>
      <p>新しくアサインするユーザ</p>
      <%= f.collection_select :user_id, User.all, :id, :name, {}, :class => 'col-lg-12'  %>
    </div>
    <div class="col-lg-6">

      <%= f.submit "アサインする", class:"btn btn-success mb-2" %>
      <% end %>
    </div>
  </div>
</div>
 <div class="card bg-light p-5">
   <div class="card-body">
       <h1>
         <%= @task.title %>
       </h1>
       <%= @task.content %><br>
       期限：<%= @task.deadline.strftime("%Y-%m-%d %H:%M:%S") %><br>
       担当者：<%= @task.user.name %><br>
       ステータス：<%= @task.finish_task(@task.status) %><br>
       <%= link_to '一覧へ戻る', root_path, class:"btn btn-light"  %>
       <% if @task.user == current_user %>
         <%= link_to '編集', edit_task_path(@task), class:"btn btn-info" %>
         <%= link_to 'アサイン', edit_user_path(@task), class:"btn btn-success" %>
       <% end %>
     </div>
   </div>
 </div>
